root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# brace expansion notation, does not work properly everywhere
[*.h]
indent_style = tab
[*.cpp]
indent_style = tab
[*.txt]
indent_size = 4
[*.json]
indent_size = 4
[*.cmake]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
